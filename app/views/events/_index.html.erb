<% if not @event.present? %>
  "Ands thats our show folks!"
<% else %>
  <div id="countdown"> <%= @event.time - Time.now %></div>
  <div id="eventDescription"> <%= @event.name %> <%= @event.speaker %></div>
<% end %>
<script type="text/javascript">
  countdown = $('#countdown').html() - 0;
  $('#countdown').html(prettyTime(countdown));
</script>  
